<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="shortcut icon"
      href="/multimedia/favicon.ico"
      type="image/x-icon"
    />
    <!-- Fuente de Iconos -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
  </head>
  <body class="d-flex flex-column min-vh-100">

    <nav
      class="navbar navbar-expand-lg navbar-light"
      style="background-color: #f19d30;"
    >
      <div class="container">
        <a class="navbar-brand" href="/"><img
            src="/multimedia/logo.png"
            alt="logo"
            height="100"
          /></a>

        <div class="d-flex align-items-center ms-auto gap-3">
          {{#if user}}
            {{#if cartId}}
              <a href="/carts/{{cartId}}" class="text-white">
                <i class="bi bi-cart3 cart-icon fs-3"></i>
              </a>
            {{/if}}
            <a href="/account" class="text-white">
              <i class="bi bi-person-circle fs-3"></i>
            </a>
            <form action="/api/sessions/logout" method="POST" class="m-0">
              <button type="submit" class="btn btn-light">Cerrar sesi√≥n</button>
            </form>
          {{/if}}
        </div>
      </div>
    </nav>

    <main class="flex-grow-1">
      <div class="container py-4">
        {{{body}}}
      </div>
    </main>

    <footer
      class="text-white text-center text-lg-start py-3 mt-4"
      style="background-color: #570606;"
    >
      <div
        class="container d-flex flex-column flex-lg-row justify-content-between align-items-center"
      >
        <div class="mb-2 mb-lg-0">
          <i class="bi bi-c-circle me-1"></i>
          lotta
        </div>
        <div class="mb-2 mb-lg-0">
          <span class="me-2">Seguinos en</span>
          <a
            href="https://www.instagram.com"
            target="_blank"
            class="text-white me-2"
          >
            <i class="bi bi-instagram fs-5"></i>
          </a>
          <a href="https://x.com" target="_blank" class="text-white me-2">
            <i class="bi bi-twitter-x fs-5"></i>
          </a>
          <a
            href="https://www.facebook.com"
            target="_blank"
            class="text-white me-2"
          >
            <i class="bi bi-facebook fs-5"></i>
          </a>
          <a href="https://web.whatsapp.com" target="_blank" class="text-white">
            <i class="bi bi-whatsapp fs-5"></i>
          </a>
        </div>
        <div>
          <i class="bi bi-telephone me-1"></i>
          +54 9 3543 57-1806
        </div>

      </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>